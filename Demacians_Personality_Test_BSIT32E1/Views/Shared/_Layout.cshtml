        <div class="footer_navlinks_container">
            <ul>
                <li><a href="#">Contact</a></li>
                <li><a href="#">Testimonials</a></li>
                <li><a href="#">Terms & Conditions</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">For Teams</a></li>
                <li><a href="#">Join Us!</a></li>
            </ul>
        </div>

        <div class="footer_image_socials_container">
            <a href="#"><img class="one" src="~/images/Facebook.png" alt=""></a>
           <a href="#"> <img class="two" src="~/images/Twitter.png" alt=""></a>
            <a href="#"><img class="three" src="~/images/Instagram.png" alt=""></a>
        </div>
    </div>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
