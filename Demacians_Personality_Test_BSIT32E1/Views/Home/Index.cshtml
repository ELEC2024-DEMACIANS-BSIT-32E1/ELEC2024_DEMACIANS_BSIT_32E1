@{
    ViewData["Title"] = "Home Page";
}

<style>
    html {
        font-family: Inter, sans-serif;
        font-size: 16px;
    }

    body {
        font-weight: 400;
        font-style: normal;
        text-decoration: none;
        text-transform: none;
        letter-spacing: normal;
        line-height: 1.15;
        background-image: url("/images/Home_BG.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    .home-container {
        width: 100%;
        display: flex;
        min-height: 100vh;
        align-items: center;
        justify-content: flex-end;
        padding-right: 50px;
    }

    .home-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .home-text {
        color: black;
        font-size: 30px;
        margin-bottom: 20px;
    }

    .home-image {
        position: absolute;
        top: 266px;
        left: 70px;
        width: 601px;
        height: 493px;
        object-fit: cover;
    }

    .home-button {
        color: white;
        width: 219px;
        height: 99px;
        transition: 0.3s;
        border: 8px solid #9a79b5;
        border-radius: 90px;
        background-color: #9a79b5;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

        .home-button:hover {
            background-color: #a43671;
            animation: pulse 300ms ease 1;
            color: white;
        }

    .home-text08 {
        font-size: 24px;
    }

    @@keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
</style>

<head>
    <title>Personality Test</title>
</head>
<body>

    <div class="home-container">
        <div class="home-content">
            <span class="home-text">
                <span>"Awareness of one's personality</span>
                <br />
                <span>is the foundation of all personal growth.</span>
                <br />
                <span>Take the first step today with a personality Test"</span>
                <br />
            </span>

            <a type="button" class="home-button" asp-area="" asp-controller="QuizUI" asp-action="QuizPage1">
                <span class="home-text08">
                    <span>Take A Quiz</span>
                    <br />
                </span>
            </a>
        </div>
        <img alt="image" src="/images/yappers.png" class="home-image" />
    </div>

</body>
</html>
