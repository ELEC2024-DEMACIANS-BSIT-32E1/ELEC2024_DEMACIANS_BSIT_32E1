@{
    ViewData["Title"] = "AboutUs Page";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .AboutUs_Body {
        margin-top: 4%;
    }

    .AboutUs_FirstSection,
    .AboutUs_SecondSection,
    .AboutUs_ThirdSection {
        width: 100%;
        height: 100vh;
        position: relative;
        text-align: center;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .AboutUs_FirstSection {
        background-image: url("../images/AboutUs-Images/AboutUs_1.png");
    }

    .FirstSection_Heading {
        position: absolute;
        top: 20px; 
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        text-align: center;
    }

        .FirstSection_Heading h1 {
            color: #88619A;
            margin: 0;
            font-weight: bold;
        }
    
    /* SECOND SECTION */
    .AboutUs_Developer_Sections {
        position: absolute;
        top: 200px; /* TO ADJUST THE GAP BETWEEN THE HEADING*/
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        width: 80%;
    }


    .developer_row {
        display: flex;
        justify-content: center;
        gap: 40px;
    }

    /* FIRST ROW */
    .developer_first_row{
        display: flex;
        justify-content: center;
        gap: 40px;
    }

    /* SECOND ROW */
    .developer_second_row {
        display: flex;
        justify-content: center;
        gap: 40px;
    }

    .developer_card {
        text-align: center;
        color: white;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .developer_card img {
            width: 186px;
            height: 186px;
            border-radius: 50%;
            border: 2px solid rgb(55, 165, 128);
        }

    .developer_card_Third {
        text-align: center;
        color: white;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .developer_card_Third img {
            width: 186px;
            height: 186px;
            border-radius: 50%;
            border: 2px solid rgb(66,152,180);
            margin-top:30px;
        }

    .text_container {
        width: 100%; 
        height: 10%; 
    }

        .text_container h2 {
            font-size: 27.4444px;
            color: rgb(55, 165, 128);
            line-height: 38px;
            letter-spacing: -0.02em;
            text-transform: none;
            list-style-type: none;
            font-weight: bold;
        }

        .text_container p {
            font-size: 20px;
            color: rgb(55, 165, 128);
            line-height: 38px;
            letter-spacing: -0.02em;
            text-transform: none;
            list-style-type: none;
        }

        .text_container_Third p {
            font-size: 20px;
        color: rgb(66,152,180);
            line-height: 38px;
            letter-spacing: -0.02em;
            text-transform: none;
            list-style-type: none;
        }

    .ui_resources_heading {
        font-size: 40px;
        color: rgb(55, 165, 128);
        margin-top: 45px;
        text-align: center;
        font-weight: bold;
    }

    .AboutUs_SecondSection {
        background-image: url("../images/AboutUs-Images/AboutUs_2.png");
    }

    .Front-End_Code_heading{
        font-size: 40px;
        color: rgb(66,152,180);
        text-align: center;
        font-weight: bold;
    }

    .AboutUs_ThirdSection {
        background-image: url("../images/AboutUs-Images/AboutUs_3.png");
    }
</style>

